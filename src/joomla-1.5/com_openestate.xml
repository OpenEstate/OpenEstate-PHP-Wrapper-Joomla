<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5">
  <name>OpenEstate</name>
  <creationDate>February 2013</creationDate>
  <author>Andreas Rudolph, Walter Wagner</author>
  <authorEmail>info@openindex.de</authorEmail>
  <authorUrl>http://openestate.org</authorUrl>
  <copyright>(C) 2010-2014 All rights reserved.</copyright>
  <license>GNU/GPL3</license>
  <version>0.4-SNAPSHOT</version>
  <description><![CDATA[<h2>OpenEstate-PHP-Wrapper</h2><p>This component integrates PHP-exported properties from OpenEstate-ImmoTool into Joomla. You can find further informations at <a href="http://openestate.org" target="_blank">OpenEstate.org</a></p>]]></description>

  <!-- Site Main File Copy Section -->
  <files>
    <filename>index.html</filename>
    <filename>controller.php</filename>
    <filename>openestate.php</filename>
    <filename>openestate.wrapper.php</filename>
    <filename>views/index.html</filename>
    <filename>views/listing/index.html</filename>
    <filename>views/listing/view.html.php</filename>
    <filename>views/listing/tmpl/index.html</filename>
    <filename>views/listing/tmpl/default.php</filename>
    <filename>views/listing/tmpl/default.xml</filename>
    <filename>views/expose/index.html</filename>
    <filename>views/expose/view.html.php</filename>
    <filename>views/expose/tmpl/index.html</filename>
    <filename>views/expose/tmpl/default.php</filename>
    <filename>views/expose/tmpl/default.xml</filename>
  </files>

  <!-- Site Main Language File Copy Section -->
  <languages>
    <language tag="de-DE">de-DE.com_openestate.ini</language>
    <language tag="en-GB">en-GB.com_openestate.ini</language>
  </languages>

  <administration>

    <!-- Administration Menu Section -->
    <menu img="components/com_openestate/images/openestate_icon-16.png">OpenEstate</menu>
    <submenu>
      <menu img="components/com_openestate/images/blank_icon-16.png" link="option=com_openestate&amp;task=wrapper">Wrapper</menu>
      <menu img="components/com_openestate/images/blank_icon-16.png" link="option=com_openestate&amp;task=about">About</menu>
    </submenu>

    <!-- Administration Main File Copy Section -->
    <files folder="admin">
      <filename>index.html</filename>
      <filename>admin.openestate.css</filename>
      <filename>admin.openestate.php</filename>
      <filename>admin.openestate.html.php</filename>
      <filename>config.wrapper.xml</filename>
      <filename>gpl-3.0-standalone.html</filename>
      <filename>assets/index.html</filename>
      <filename>elements/index.html</filename>
      <filename>elements/filter.php</filename>
      <filename>elements/language.php</filename>
      <filename>elements/order.php</filename>
      <filename>images/index.html</filename>
      <filename>images/openestate_icon-16.png</filename>
      <filename>images/openestate_icon-32.png</filename>
      <filename>images/openestate_icon-48.png</filename>
      <filename>images/openestate_logo.png</filename>
    </files>

    <!-- Administration Language File Copy Section -->
    <languages folder="admin">
      <language tag="de-DE">de-DE.com_openestate.ini</language>
      <language tag="de-DE">de-DE.com_openestate.menu.ini</language>
      <language tag="en-GB">en-GB.com_openestate.ini</language>
      <language tag="en-GB">en-GB.com_openestate.menu.ini</language>
    </languages>

    <!-- Administration Main Media File Copy Section -->
    <media folder="admin" destination="com_openestate/images">
      <filename>images/blank_icon-16.png</filename>
      <filename>images/openestate_icon-16.png</filename>
      <filename>images/openestate_icon-32.png</filename>
      <filename>images/openestate_icon-48.png</filename>
      <filename>images/openestate_logo.png</filename>
    </media>
  </administration>
</install>
